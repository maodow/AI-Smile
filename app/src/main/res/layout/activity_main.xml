<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_check_smile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20PX">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_60PX"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_exit_selector"
            android:paddingLeft="@dimen/DIMEN_30PX"
            android:paddingRight="@dimen/DIMEN_30PX"
            android:paddingTop="@dimen/DIMEN_12PX"
            android:paddingBottom="@dimen/DIMEN_12PX"/>

        <ImageView
            android:id="@+id/iv_check_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bg_check_record"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:drawableTop="@mipmap/icon_title"
        android:textColor="#510F2A"
        android:textSize="20sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_face"
        android:layout_width="@dimen/DIMEN_380PX"
        android:layout_height="@dimen/DIMEN_380PX"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:background="@mipmap/bg_smile_face"
        android:src="@mipmap/icon_default_face" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:paddingLeft="@dimen/DIMEN_60PX"
        android:paddingRight="@dimen/DIMEN_60PX"
        android:text="测肤提示：面部占比3/4、关掉美颜、拍摄正面图片、   不戴眼镜"
        android:textColor="#FFEBF5"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="@dimen/DIMEN_260PX"
        android:layout_height="@dimen/DIMEN_260PX"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_110PX"
        android:background="@mipmap/bg_take_photo"
        android:paddingBottom="@dimen/DIMEN_30PX"
        android:text="拍照测肤"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>